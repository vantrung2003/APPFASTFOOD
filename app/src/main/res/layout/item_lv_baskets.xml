<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#FCC9C9"
    app:cardCornerRadius="12dp"
    android:layout_marginHorizontal="40dp"
    android:id="@+id/item_lv_baskets_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/backgroundsplash"
            android:scaleType="centerCrop"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="10dp"
            android:id="@+id/item_lv_baskets_img"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1000">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên món ăn"
                android:id="@+id/item_lv_baskets_tv_name"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="26dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:id="@+id/dialog_home_sp_LNsoluong"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="11dp">

                        <TextView
                            android:id="@+id/item_lv_baskets_tv_tru"
                            android:layout_width="22dp"
                            android:layout_height="wrap_content"
                            android:background="#FE9009"
                            android:gravity="top|center"
                            android:text="-"
                            android:textColor="#455A64"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <EditText
                        android:id="@+id/item_lv_baskets_edt_sl"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_input_trans"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="1"
                        android:textSize="20dp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="11dp">

                        <TextView
                            android:id="@+id/item_lv_baskets_tv_cong"
                            android:layout_width="22dp"
                            android:layout_height="wrap_content"
                            android:background="#FE9009"
                            android:gravity="top|center"
                            android:text="+"
                            android:textColor="#455A64"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
            <ImageView
                android:src="@drawable/ic_baseline_delete_forever_24"
                android:id="@+id/item_lv_baskets_tv_xoa"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>