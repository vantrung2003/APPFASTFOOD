<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:background="#DDFCC9"
    android:id="@+id/item_lv_top_bg"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_lv_top_img"
            android:layout_width="100dp"
            android:layout_height="104dp"
            android:scaleType="centerCrop"
            android:src="@drawable/backgroundsplash" />
        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/item_lv_top_tv_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="sản phẩm 1"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/item_lv_top_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="top"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FE9009"
            android:text="+ ADD"
            android:textSize="15dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>